<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.2/moment.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
    <title>Rate</title>
</head>

<body class="d-grid ">
    <header class="d-flex justify-content-start p-4">
        <div class="col 12">
            <img src="../img/Duppla_Logotipo_V2.png" alt="logo duppla" style="height: 6rem;">
        </div>
    </header>
    <main class="d-grid g-1">
        <section class="d-flex justify-content-center aling-items-center">
            <div class="container-xl">
                <div class="row col-md-12 pb-5 ">
                    <div class=" me-5 col-md-5 border border-succes rounded-5">
                        <form action="/rates/addRate" class="login__form" method="POST">
                            <div class="d-flex justify-content-between m-3">
                                <p class="fw-bold fs-5"> Tasa duppla: </p>
                                <p class="fw-bold fs-5"> $<%= rate.value %></p>
                            </div>
                            <div class="d-flex justify-content-between m-3">
                                <div class="pt-3">
                                    <div class="mb-5">
                                        <label for="exampleInput" class="form-label">Ingresa la nueva tasa</label>
                                        <input type="value" class="form-control rounded-pill"
                                            id="inputGroup-sizing-default" aria-describedby="emailHelp" name="value">
                                        <div id="emailHelp" class="form-text"></div>
                                    </div>
                                </div>
                                <div class="p-5">
                                    <button type="submit" class="btn btn-primary btn-md rounded-pill">Modificar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="ms-5 col-md-5 border border-succes rounded-5">
                        <form action="/rates/addBankRate" class="login__form" method="POST">
                            <div class="d-flex justify-content-between m-3">
                                <p class="fw-bold fs-5"> Tasa bancaria com: </p>
                                <p class="fw-bold fs-5"> $<%= bank.value %> </p>
                            </div>
                            <div class="d-flex justify-content-between  m-3">
                                <div class="pt-3">
                                    <div class="mb-5">
                                        <label for="exampleInput" class="form-label">Ingresa nueva tasa
                                            bancaria:</label>
                                        <input type="value" class="form-control rounded-pill"
                                            id="inputGroup-sizing-default" aria-describedby="emailHelp" name="value">
                                        <div id="emailHelp" class="form-text"></div>
                                    </div>
                                </div>
                                <div class="p-5">
                                    <button type="submit" class="btn btn-primary btn-md rounded-pill">Modificar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-12 border border-succes rounded-5 pt-3">
                    <table class="table table-hover pt-4" id="tabletest">
                        <h4 class="p-2">Resultados:</h4>
                        <thead>
                            <tr>
                                <th scope="col">Valor</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Fecha de creacion</th>
                                <th scope="col">Usuario</th>
                            </tr>
                        </thead>
                        
                    </table>
                </div>
            </div>
        </section>
        <script type="text/javascript">
            $(document).ready(function() {
                $('#tabletest').DataTable( {
                  responsive: true,
                  processing: true,
                  ajax: {
                    url: "/.netlify/functions/rates/getAll",
                    dataSrc: '',
                  },
                  columns: [
                    { data: 'value' },
                    { data: 'type' },
                    { data: 'creation_date' },
                    { data: 'mail' }
                ],
                columnDefs: [
                    {
                        targets: 1,
                        render: DataTable.render.date(),
                    },
                ]
                });
              });
          </script> 
    </main>

</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"></script>
